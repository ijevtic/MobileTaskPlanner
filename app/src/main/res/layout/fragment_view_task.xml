<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="?colorTertiary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vt_task_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="?textAppearanceBody1"
            android:background="?colorTertiary"
            android:textSize="20sp"
            android:text="March 29. 2023."
            />
        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?colorSurface"
            android:paddingStart="10dp">
            <ImageView
                android:id="@+id/vt_task_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"

                android:src="@drawable/ic_clock" />
            <TextView
                android:id="@+id/vt_task_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="?textAppearanceBody1"
                android:text="13:15 - 15:00"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/vt_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="?colorSurface"
            android:textSize="30sp"
            android:textColor="?textAppearanceBody1"
            android:text="Algebra lecture"
            />

        <TextView
            android:id="@+id/vt_task_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="?colorTertiaryContainer"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="?textAppearanceBody1"
            android:text="Description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?colorTertiary"
        android:orientation="horizontal">
        <Button
            android:id="@+id/vt_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:layout_gravity="bottom"
            android:background="?colorSurface"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/vt_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:layout_gravity="bottom"
            android:background="?colorSurface"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
    </LinearLayout>

</LinearLayout>